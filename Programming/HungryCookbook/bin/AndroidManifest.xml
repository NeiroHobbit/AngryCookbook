<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hungrycookbook"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.hungrycookbook.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.hungrycookbook.CookbookActivity" >
        </activity>
        <activity
            android:name="com.hungrycookbook.InfoActivity"
            android:label="@string/title_activity_info" >
        </activity>
        <activity
            android:name="com.hungrycookbook.SearchActivity"
            android:label="@string/title_activity_search" >
        </activity>
    </application>

</manifest>